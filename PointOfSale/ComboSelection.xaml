<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="140"/>
                <Setter Property="MinHeight" Value="140"/>
            </Style>    
        </WrapPanel.Resources>
        <Button VerticalContentAlignment="Top" Click="BrontowurstButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-01.png"></ImageBrush>
            </Button.Background>
            Brontowurst Combo           
        </Button>
        <Button VerticalContentAlignment="Top" Click="DinoNuggetsButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-02.png"></ImageBrush>
            </Button.Background>
            Dino-Nuggets Combo
        </Button>
        <Button VerticalContentAlignment="Top" Click="PrehistoricPBJButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-03.png"></ImageBrush>
            </Button.Background>
            Prehistoric PB&amp;J Combo
        </Button>
        <Button VerticalContentAlignment="Top" Click="PterodactylWingsButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-04.png"></ImageBrush>
            </Button.Background>
            Pterodactyl Wings Combo
        </Button>
        <Button VerticalContentAlignment="Top" Click="SteakosarusButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-05.png"></ImageBrush>
            </Button.Background>
            Steakosaurus Burger Combo
        </Button>
        <Button VerticalContentAlignment="Top" Click="TRexKingButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-06.png"></ImageBrush>
            </Button.Background>
            T-Rex King Burger Combo
        </Button>
        <Button VerticalContentAlignment="Top" Click="VelociwrapButton">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-07.png"></ImageBrush>
            </Button.Background>
            Veloci-Wrap Combo
        </Button>
    </WrapPanel>
</Page>
